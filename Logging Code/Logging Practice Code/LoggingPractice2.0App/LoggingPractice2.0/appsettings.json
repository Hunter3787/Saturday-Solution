      }
    },
    "LoggingFile": {
      "Options": {
        "FolderPath": "C:\\Users\\Daniel\\schoolProjects\\Saturday-Solution\\Logging Code\\Logging Practice Code\\LoggingPractice2.0App\\Logs", // sets the path of where the file must be stored.
